<?xml version="1.0" encoding="UTF-8"?>

    <RelativeLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="120dp"
        tools:srcCompat="@tools:sample/avatars[0]"
        android:id="@+id/ivPoster"/>

    <TextView android:layout_height="31dp"
        android:layout_width="286dp"
        android:id="@+id/tvTitle"
        android:textSize="24sp"
        android:text="Aquaman"
        android:layout_toRightOf="@+id/ivPoster"
        android:layout_toEndOf="@+id/ivPoster"
        android:layout_marginRight="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginLeft="1dp"
        android:layout_marginStart="1dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_height="97dp"
        android:layout_width="286dp"
        android:id="@+id/tvOverView"
        android:text="Arthur Curry learns that he is the heir to the underwater kingdom of Atlantis, and must step forward to lead his people and be a hero to the world." android:layout_toRightOf="@+id/ivPoster" android:layout_toEndOf="@+id/ivPoster" android:layout_marginRight="4dp" android:layout_marginEnd="4dp" android:layout_marginLeft="1dp" android:layout_marginStart="1dp" android:layout_alignParentRight="true" android:layout_alignParentEnd="true" android:layout_marginBottom="2dp" android:layout_marginTop="-2dp" android:layout_alignBottom="@+id/ivPoster" android:layout_below="@+id/tvTitle"/>

</RelativeLayout>